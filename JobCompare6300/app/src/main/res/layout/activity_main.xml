<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.MainActivity">

    <LinearLayout
        android:layout_width="393dp"
        android:layout_height="665dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="7dp">

        <TextView
            android:id="@+id/saveMessage"
            android:layout_width="373dp"
            android:layout_height="65dp"
            android:text="Job Compare"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textAlignment="center"
            android:textSize="34sp" />

        <Button
            android:id="@+id/enterEditJD"
            android:layout_width="282dp"
            android:layout_height="64dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="70dp"
            android:layout_marginLeft="65dp"
            android:onClick="handleJDClick"
            android:text="Enter/Edit Job Details" />

        <Button
            android:id="@+id/enterJO"
            android:layout_width="282dp"
            android:layout_height="64dp"
            android:layout_marginBottom="70dp"
            android:layout_marginLeft="65dp"
            android:onClick="handleOfferClick"
            android:text="Enter Job Offers" />

        <Button
            android:id="@+id/adjCompSettings"
            android:layout_width="282dp"
            android:layout_height="64dp"
            android:layout_marginBottom="70dp"
            android:layout_marginLeft="65dp"
            android:onClick="handleWeightClick"
            android:text="Adjust Comparison Settings" />

        <Button
            android:id="@+id/compareJO"
            android:layout_width="282dp"
            android:layout_height="64dp"
            android:enabled="false"
            android:layout_marginLeft="65dp"
            android:onClick="handleOfferCompare"
            android:text="Compare Job Offers" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>